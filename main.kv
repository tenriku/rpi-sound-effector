#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import get_color_from_hex kivy.utils.get_color_from_hex

<Home>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        ActionBar:
            size_hint_y: 0.1
            ActionView:
                ActionPrevious:
                    title: 'MENU'
                    with_previous: False # trueだと戻るボタン
                
                ActionOverflow:

                ActionButton:
                    text: 'ADD'
                    font_size: 40

                ActionButton:
                    text: 'DELETE'
                    font_size: 40

                ActionButton:
                    text: 'LIBRARY'
                    font_size: 40

        ScreenManager:
            id: sm

            GainMenu:
            
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            size: root.size

            Button:
                size_hint_x: 0.1
                text: '<<'
                font_size: 80
                background_color: get_color_from_hex('#f0f0f0')
                # disabled: True
                on_press:
                    root.to_left_screen()
                    sm.transition = SlideTransition(direction = 'right')
                    sm.current = root.left_screen

            ActionButton:
                size_hint_x: 0.1
                icon: root.volume_icon
                font_size: 40
        
            Slider:
                orientation: 'horizontal'
                min: 0.00
                max: 1.00
                step: 0.01
                value: 1.0
                on_touch_down: root.volume_sld(self)
                on_touch_move: root.volume_sld(self)
                on_touch_up: root.volume_sld(self)

            Button:
                size_hint_x: 0.1
                text: '>>'
                font_size: 80
                background_color: get_color_from_hex('#f0f0f0')
                # disabled: True
                on_press:
                    root.to_right_screen()
                    sm.transition = SlideTransition(direction = 'left')
                    sm.current = root.right_screen

<GainMenu>:
    name: 'Gain'

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Button:
            size_hint_y: 0.2
            text: '[*]Gain' if root.is_enable else '[ ]Gain'
            font_size: 60
            background_color: get_color_from_hex(root.background_color)
            on_press: root.toggle()
        
        Slider:
            size_hint_y: 0.7
            orientation: 'vertical'
            id: sld
            min: 0
            max: 100
            step: 1
            value: 1
            on_touch_down: root.sld(self)
            on_touch_move: root.sld(self)
            on_touch_up: root.sld(self)
           
        Label:
            size_hint_y: 0.1
            text: str(sld.value)
            font_size: 40
